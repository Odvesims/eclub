<div><button type="button" class="btn btn-primary" onclick="window.open('<%= edit_listadoclube_path(:id=> 1, :zona=> @zona, :distrito=> @distrito) %>', '_blank')">Imprimir</button></div>
<table style = "width: 100%; border: solid thin #000000">
	<tr>
		<td colspan = 4, style = "width: 100%; font-size: 24px; text-align: center">Listado de Clubes</td>
	</tr>
	<tr style = "background-color: 00BFFF">
		<td style = "width: 5%; border: solid thin #000000"><b>Zona</td>
		<td style = "width: 35%; border: solid thin #000000"><b>Club</td>
		<td style = "width: 25%; border: solid thin #000000"><b>Distrito</td>
		<td style = "width: 25%; border: solid thin #000000"><b>Iglesia</td>
	</td>
	<% @clubes.each do |c| %>
		<% laZona = c.zonaId %>
		<% if laZona.to_i == 1 %>
			<tr style = "background-color: #FAEBD7;">
		<% end %>
		<% if laZona.to_i == 2 %>
			<tr style = "background-color: #E6E6FA;">
		<% end %>
		<% if laZona.to_i == 3 %>
			<tr style = "background-color: #FFFF00;">
		<% end %>
		<% if laZona.to_i == 4 %>
			<tr style = "background-color: #FFF5EE;">
		<% end %>
		<% if laZona.to_i == 5 %>
			<tr style = "background-color: #F5FFFA;">
		<% end %>
		<% if laZona.to_i == 6 %>
			<tr style = "background-color: #D3D3D3;">
		<% end %>
			<% zona = Zona.where("zona_id = #{c.zona_id}").first %>
			<td style = "border: solid thin #000000"><%= laZona %></td>
			<td style = "border: solid thin #000000"><%= c.nombre %></td>
			<td style = "border: solid thin #000000"><%= c.distrito_nombre %></td>
			<td style = "border: solid thin #000000"><%= c.iglesia_nombre %></td>
		</tr>				
	<% end %>
</table>