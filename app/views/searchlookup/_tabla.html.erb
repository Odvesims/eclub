				<td><%= det.descripcion %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>
		
	<% elsif @pfuncion == 'bugrupo'  %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.descripcion%>','grupo','','<%=@pformu%>')">
				<td><%= det.codigo %></td>
				<td><%= det.descripcion %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>

	<% elsif @pfuncion == 'bubanca' or @pfuncion == 'bu2banca' %>
		<% if @pfuncion == 'bu2banca' %>
			<% @pformu='serial'%>
		<% end %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.nombre%>','banca','','<%=@pformu%>')">
				<td><%= det.codigo %></td>
				<td><%= det.nombre %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>

	<% elsif @pfuncion == 'buequipo'  %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.descripcion%>','equipo')">
				<td><%= det.codigo %></td>
				<td><%= det.descripcion %></td>
				<td><%= det.estatus %></td>
			</tr>
