				<td><%= det.numero_cuenta %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>
	<% elsif @pfuncion == 'busconcepto'  %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.descripcion%>','concepto','<%=@id_cod%>','<%=@pformu%>')">
				<td><%= det.codigo %></td>
				<td><%= det.descripcion %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>
	<% elsif @pfuncion == 'busconceptota'  %>
