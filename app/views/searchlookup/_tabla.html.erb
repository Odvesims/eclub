<table class= "table-striped table-hover" width="100%">
	<%if @pfuncion=='busimcard'%>
		<tr>
			<th><%= t(:codigo) %></th>
			<th><%= t(:numero_cuenta) %></th>
			<th><%= t(:estado) %></th>
		</tr>
	<%else%>  
		<tr>
			<th><%= t(:codigo) %></th>
			<th><%= t(:nombre) %></th>
			<th><%= t(:estado) %></th>
		</tr>
	<%end%>	
	<% if @pfuncion == 'ccvendedor' %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.nombre%>','vendedor')">
				<td><%= det.codigo %></td>
				<td><%= det.nombre %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>
	<% elsif @pfuncion == 'mopropietario'  %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.nombre%>','propietario')">
				<td><%= det.codigo %></td>
				<td><%= det.nombre %></td>
				<td><%= det.estatus %></td>
			</tr>
		<% end %>
	<% elsif @pfuncion == 'busimcard'  %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.nombre%>','simcard')">
