						<td><%= det.codigo %></td>
						<td><%= det.nombre %></td>
						<td><%= det.estatus %></td>
					</tr>
				<% end %>
		<% end %>
		<% if @buscarpor == 'equipo' %>
				<% @modeldets.each do |det| %>
					<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.descripcion%>','equipo')">
						<td><%= det.codigo %></td>
						<td><%= det.descripcion %></td>
						<td><%= det.estatus %></td>
					</tr>
				<% end %>
		<% end %>
		<% if @buscarpor == 'simcard' %>
				<% @modeldets.each do |det| %>
					<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.numero_cuenta%>','simcard')">
						<td><%= det.codigo %></td>
						<td><%= det.numero_cuenta %></td>
						<td><%= det.estatus %></td>
					</tr>
				<% end %>
		<% end %>
		<% if @buscarpor == 'concepto' %>
				<% @modeldets.each do |det| %>
					<tr onclick="takeGeneric ('<%= det.id %>','<%= det.codigo %>','<%= det.descripcion%>','concepto','<%=@id_cod%>','<%=@pformu%>')">
						<td><%= det.codigo %></td>
						<td><%= det.descripcion %></td>
						<td><%= det.estatus %></td>
					</tr>
				<% end %>
		<% end %>
		
	<% else %>
		<% @modeldets.each do |det| %>
			<tr onclick="takeGeneric('<%= det.id %>','<%= det.codigo %>','<%= det.nombre_cliente %>', 'cliente')">
				<td><%= det.codigo %></td>
				<td><%= det.nombre_cliente %></td>
				<td><%= det.estatus %></td>
			</tr>	
		<% end %>
	<% end %>
</table>