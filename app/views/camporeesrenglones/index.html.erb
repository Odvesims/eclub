<ul class="nav nav-tabs">
	<li class="active"><a data-toggle="tab" href="#home"><h3>Camporees Renglones</h3></a></li>
</ul>
<div class="tab-content">
	<button type="button" class="btn btn-primary" onclick="window.location = '<%= new_camporeesrenglone_path %>'">Nuevo</button>
	<table class="table table-striped">
		<thead>
		  <tr>
			<th>ID</th>
			<th>Nombre</th>
			<th>Total Puntos</th>
			<th>Camporee</th>
		  </tr>
		</thead>
		<tbody>
			<% total_puntos = 0 %>
			<% @camporeesrenglones.each do |c| %>
				<tr>
					<td><%= c.id %></td>
					<td><%= link_to c.nombre, edit_camporeesrenglone_path(c.id) %></td>
					<td><%= c.total_puntos %></td>
					<td><%= c.camporee_nombre %></td>
					<% total_puntos += c.total_puntos %>
				</tr>
			<% end %>
			<tr>
				<td></td>
				<td style = "text-align: right;"><b>Total:</td>
				<td><b><%= total_puntos %></td>
				<td></td>
			</tr>
		</tbody>
	</table>
</div>