			<td class = "col bg-danger text-white"><%= club.nombre %></td>
			<td class = "col bg-danger text-white"><%= "#{club.zonaNombre}" %></td>
		</tr>
	<% end %>
	<tr class = "row"><td class = "col bg-danger text-white"><%= "Total Faltante : #{@clubes_faltantes.count}" %></td></tr>
</table>