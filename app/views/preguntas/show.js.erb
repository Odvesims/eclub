<% if @tipo == 'despliega' %>
	<% if @pregunta != nil %>
		document.getElementById('pregunta').innerHTML = '';
		document.getElementById('pregunta').innerHTML = '<%= @pregunta.pregunta %>';
		document.getElementById('cita').value= '<%= @pregunta.cita %>';
		document.getElementById('respuesta').innerHTML = '';	
		document.getElementById('respuesta').innerHTML = '<%= @pregunta.respuesta %>'
		document.getElementById('button_revela_respuesta').disabled='false';
	<% end %>
<% end %>
<% if @tipo == 'correcto' %>
	<% if @equipo_activo.id == 1 %>
		document.getElementById('a_nombre').style.backgroundColor= "";
		document.getElementById('a_puntos').style.backgroundColor= "";
		document.getElementById('a_puntos').innerHTML= '<%= @equipo_activo.puntuacion %>';
	<% else %>
		document.getElementById('b_nombre').style.backgroundColor= "";
		document.getElementById('b_puntos').style.backgroundColor= "";
		document.getElementById('b_puntos').innerHTML= '<%= @equipo_activo.puntuacion %>';
	<% end %>
	<% if @equipo_inactivo.id == 1 %>
		document.getElementById('a_nombre').style.backgroundColor= "blue";
		document.getElementById('a_puntos').style.backgroundColor= "blue";
	<% else %>
		document.getElementById('b_nombre').style.backgroundColor= "blue";
		document.getElementById('b_puntos').style.backgroundColor= "blue";	
	<% end %>
	document.getElementById('pregunta').innerHTML = '';
	document.getElementById('respuesta').innerHTML = '';
	document.getElementById('respuesta').style.color="white";
	document.getElementById('cita').value = '';
	document.getElementById('button_revela_respuesta').disabled=true;
	document.getElementById('btncorrecto').disabled=true;
	document.getElementById('btnincorrecto').disabled=true;
	clearInterval('<%= $temporizador_id %>');
	document.getElementById('btnTimer').disabled=false;
	document.getElementById('btnPausa').disabled=true;
	document.getElementById('btnReset').disabled=true;
	document.getElementById('time').innerHTML="00:20";
<% end %>
<% if @tipo == 'incorrecto' %>
	document.getElementById('pregunta').innerHTML = '';
	document.getElementById('cita').value = '';
	document.getElementById('respuesta').innerHTML = '';
	document.getElementById('respuesta').style.color="white";
	document.getElementById('button_revela_respuesta').disabled=true;
	document.getElementById('btncorrecto').disabled=true;
	document.getElementById('btnincorrecto').disabled=true;	
	clearInterval('<%= $temporizador_id %>');
	document.getElementById('btnTimer').disabled=false;
	document.getElementById('btnPausa').disabled=true;
	document.getElementById('btnReset').disabled=true;
	document.getElementById('time').innerHTML="00:20";
	<% if @equipo_activo.id == 1 %>
		document.getElementById('a_nombre').style.backgroundColor= "";
		document.getElementById('a_puntos').style.backgroundColor= "";
	<% else %>
		document.getElementById('b_nombre').style.backgroundColor= "";
		document.getElementById('b_puntos').style.backgroundColor= "";
	<% end %>
	<% if @equipo_inactivo.id == 1 %>
		document.getElementById('a_nombre').style.backgroundColor= "blue";
		document.getElementById('a_puntos').style.backgroundColor= "blue";
	<% else %>
		document.getElementById('b_nombre').style.backgroundColor= "blue";
		document.getElementById('b_puntos').style.backgroundColor= "blue";	
	<% end %>
<% end %>
<% if @tipo == 'temporizador' %>
	document.getElementById("temporizador_id").value = '<%= @temporizador_id %>'
<% end %>