<div class= "row"><%= render 'form' %></div>
<div class= "row text-center">
	<% if not @user.new_record? %>
		<button type= "button" id= "previo"    onclick= "window.location = '<%= edit_user_path(@user,:donde => 'prev') %>';" class="btn btn-primary"><span class = "glyphicon glyphicon-chevron-left"></span></button>
	<% end %>	
	<button type= "button" id= "buscar" onclick="window.location = '<%= users_path %>';" class="btn btn-primary"><span class = "glyphicon glyphicon-search"></span></button>
	<% if not @user.new_record? %>
		<button type= "button" id= "nuevo"     onclick= "window.location = '<%= new_user_path %>';" class="btn btn-primary">                            <span class = "glyphicon glyphicon-plus"></span></button>
		<button type= "button" id= "siguiente" onclick= "window.location = '<%= edit_user_path(@user,:donde => 'next') %>';" class="btn btn-primary"><span class = "glyphicon glyphicon-chevron-right"></span></button>
	<% end %>
	<br>
</div>
